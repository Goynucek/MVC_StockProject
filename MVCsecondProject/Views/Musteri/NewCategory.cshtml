@model MVCsecondProject.Models.Entity.TBL_Musteri

@{
    ViewBag.Title = "NewCategory";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<h2>Yeni Müşteri</h2>
</br>
<form method="post" class="form-control">
    <div class="form-group">
        <label>Müşteri Adı</label>
        @Html.TextBoxFor(m => m.MusteriAd, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Müşteri Soyadı</label>
        @Html.TextBoxFor(m => m.MusteriSoyad, new { @class = "form-control" })
    </div>
    <div>
        <button class="btn btn-check">Ekle</button>
    </div>
</form>
