@model MVCsecondProject.Models.Entity.TBL_Kategori
@{
    ViewBag.Title = "KategoriGetir";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<h2>KategoriGetir</h2>

@using (Html.BeginForm("Guncelle", "Katergori", FormMethod.Post))
{
    @Html.HiddenFor(m=>m.KategoriID)
    <div>
        @Html.LabelFor(m => m.KategoriAd);
        @Html.TextBoxFor(m => m.KategoriAd, new { @class = "form-control" });
    </div>
    <div>
        <button class="btn btn-check">Güncelle</button>
    </div>
}